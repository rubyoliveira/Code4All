generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  username String @id
  hashedPassword String
  email String
  name String
  recommendations String[] @default([])
  complete String @default("light")
  image String @default("https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png")
  course courses[]
}

model courses {
  title String @id
  description String
  difficulty String
  likes Int @default(0)
  image String
  rating Float[] @default([])
  author String @default("anonymous")
  userId String[] @default([])
  user user @relation(fields: [author], references: [username])
  modules modules[]
  completedBy String[] @default([])
}

model modules {
  id          Int    @id @default(autoincrement())
  title String
  courseId String
  course courses @relation(fields: [courseId], references: [title])
  topics topics[]
  completedBy String[] @default([])
}

model topics {
  id          Int    @id @default(autoincrement())
  title String
  description String
  video String
  moduleId Int
  module modules @relation(fields: [moduleId], references: [id])
}

model ide {
  id Int @id @default(autoincrement())
  language String
  version String
  starterCode String
}

model interactiveIDE {
  idHash String @id
  language String
  version String
  code String
  users String[]
  creator String
}
