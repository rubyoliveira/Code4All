generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  username String @id
  hashedPassword String
}

model courses {
  title String @id
  description String
  difficulty String
  image String
  modules modules[]
}

model modules {
  title String @id
  courseId String 
  course courses @relation(fields: [courseId], references: [title])
  topics topics[]
}

model topics {
  title String @id
  description String
  video String
  moduleId String
  module modules @relation(fields: [moduleId], references: [title])
}
